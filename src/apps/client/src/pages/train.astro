---
import PrototypeLayout from "../components/Layouts/PrototypeLayout.astro";
import ConnectionLostRedirect from "../components/ConnectionLostModal/ConnectionLostRedirect.astro";
import TrainingBtn from "../components/Training/TrainingBtn.astro";
import TrainingScreen from "../components/Training/TrainingScreen.astro";
---

<PrototypeLayout title="Training">
  <div class="flex p-2 h-24" slot="header">
    <div class="flex-1">
      <div class="flex h-full items-center justify-center">
        <TrainingBtn />
      </div>
    </div>
    <img
      id="training-state-icon"
      src=""
      class="max-w-24 max-h-24 min-w-14 min-h-14"
    />
    <div class="flex-1">
      <div class="flex flex-col h-full items-center justify-center">
        <span id="training-state-text"></span>
      </div>
    </div>
  </div>

  <TrainingScreen slot="main" transition:persist />

  <div class = "flex items-center justify-center" slot = "main">
    <img
      id="overlay-icon"
      src=""
      class="max-w-50 max-h-50 min-w-40 min-h-40"
    />
  </div>

  <div class="flex p-3" slot="footer">
    <div class="flex-1">
      <div class="flex h-full items-center justify-center">
        <a class="btn" href="/">Back</a>
      </div>
    </div>
    <div class="flex-1">
      <div class="flex flex-col h-full items-center justify-center">
        <a class="btn" href="/predict">Predict</a>
      </div>
    </div>
  </div>
  
  <ConnectionLostRedirect />

  <style> 
    #overlay-icon {
            position: fixed;
            top: 190px;
            left: 60px;
            width: 80%;
            height: 60%;
            display: flex;
            z-index: 100000;
    }
  </style>

</PrototypeLayout>
