---
import PrototypeLayout from "../components/Layouts/PrototypeLayout.astro";
import SetupHeader from "../components/Setup/SetupHeader.astro";
import ConnectionLostRedirect from "../components/ConnectionLostModal/ConnectionLostRedirect.astro";
import ThemeSelector from "../components/Settings/ThemeSelector";
import SocialMediaSelector from "../components/Settings/SocialMediaSelector";
import MovementSelector from "../components/Settings/MovementSelector";
---

<PrototypeLayout title="Settings">
  <SetupHeader slot="header" />

  <div
    class="w-full h-full flex flex-col gap-6 items-center justify-center"
    slot="main"
  >
    <ThemeSelector client:only="react" />
    <SocialMediaSelector client:only="react" />
    <MovementSelector client:only="react" />
  </div>

  <div class="flex p-3" slot="footer">
    <div class="flex-1">
      <div class="flex h-full items-center justify-center">
        <a class="btn" href="/">Back</a>
      </div>
    </div>
    <div class="flex-1">
      <div class="flex flex-col h-full items-center justify-center"></div>
    </div>
  </div>
  <ConnectionLostRedirect />
</PrototypeLayout>
