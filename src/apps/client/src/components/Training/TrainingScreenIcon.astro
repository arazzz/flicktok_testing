---
const { ...props } = Astro.props;
---

<training-screen-icon {...props}></training-screen-icon>
<script>
  import globalStore from "/src/stores/global.store.js";
  class TrainingScreenIcon extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.render();
    }

    render() {
      const src = `./public/images/training/${globalStore.ui.trainingState.icon[globalStore.ui.trainingState.state]}.png`; // Adjust the path as needed

      this.innerHTML = `<img src="${src}" alt="Training Icon">`;
    }
  }

  customElements.define("training-screen-icon", TrainingScreenIcon);
</script>
